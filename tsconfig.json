{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES6"
        ],
        "sourceMap": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}